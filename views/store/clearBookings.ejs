<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { pageTitle }) %>

  <body
    class="bg-gray-100 text-gray-800 font-sans flex flex-col min-h-screen pattern-dots"
  >
    <%- include('../partials/nav') %>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex-grow">
      <section class="mt-16 mb-12">
        <% if (homes.length === 0) { %>
        <div class="text-center">
          <p class="text-gray-500 text-lg mb-4">No booked homes found.</p>
        </div>
        <% } else { %>
        <h3 class="text-2xl font-semibold text-gray-800 mb-6 text-center">
          âœ… Here are your bookings
        </h3>

        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 justify-items-center"
        >
          <% homes.forEach(home => { %>
          <div
            class="bg-white p-6 rounded-lg shadow-md text-center w-full max-w-sm"
          >
            <div class="mb-4">
              <img
                src="<%= home.photo %>"
                alt="<%= home.name %> photo"
                class="w-[300px] h-[200px] rounded-lg object-cover"
              />
            </div>
            <h2 class="text-xl font-semibold text-green-800 mb-2">
              <%= home.name %>
            </h2>
            <p class="text-gray-700">This home is successfully booked!</p>

            <div class="mt-4">
              <form action="/clearBookings" method="POST">
                <input type="hidden" name="id" value="<%= home._id %>" />
                <button
                  type="submit"
                  class="bg-gray-200 text-gray-800 px-4 py-2 rounded-md hover:bg-gray-300 transition"
                >
                  Clear
                </button>
              </form>
            </div>
          </div>
          <% }) %>
        </div>
        <% } %>
      </section>

      <!-- Centered Go Back button -->
      <div class="text-center mb-16">
        <a
          href="/bookings"
          class="inline-block bg-green-700 text-white px-3 py-1 rounded-md hover:bg-green-800 transition"
        >
          Go back
        </a>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
