<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { pageTitle: 'Welcome Guest' }) %>
  <body class="bg-gray-50 text-gray-800 font-sans">
    <div class="min-h-screen flex flex-col">
      <%- include('../partials/nav', { user }) %>

      <!-- Guest Greeting -->
      <section class="bg-white py-15 text-center shadow-md">
        <div class="max-w-5xl mx-auto px-6">
          <h1 class="text-5xl md:text-6xl font-extrabold text-red-500 mb-6">
            <span>Welcome!</span>
            <span
              class="bg-red-500 px-4 py-2 rounded-3xl text-white text-3xl md:text-5xl inline-block"
            >
              <%= user.lastName %>
            </span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 mb-10">
            Ready for your next adventure?
          </p>
          <a
            href="/home"
            class="bg-red-500 text-white font-semibold px-6 py-3 rounded-full shadow-lg hover:bg-red-600 transition duration-300 ease-in-out"
          >
            Explore Listings
          </a>
        </div>

        <div class="mt-20"><%- include('../partials/features') %></div>
      </section>

      <!-- How it Works Section -->
      <%- include('../partials/howItWork') %>

      <!-- Become a Host Section (still shown) -->
      <%- include('../partials/becomeHost') %>

      <!-- Made By Section -->
      <%- include('../partials/madeBy') %>

      <!-- Footer -->
      <%- include('../partials/footer') %>
    </div>
  </body>
</html>
