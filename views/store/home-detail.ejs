<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { pageTitle: home.name }) %>

  <body
    class="bg-gray-100 text-gray-800 font-sans flex flex-col min-h-screen pattern-dots"
  >
    <%- include('../partials/nav') %>

    <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 flex-grow mt-16">
      <div class="bg-white shadow-xl rounded-xl overflow-hidden mb-10">
        <!-- Details Section -->

        <div class="p-8 max-w-[350px]">
          <div class="mb-3">
            <img
              src="<%= home.photo %>"
              alt="<%= home.name %> photo"
              class="w-[300px] h-[200px] rounded-lg object-cover"
            />
          </div>
          <h1 class="text-3xl font-extrabold text-red-600 mb-3">
            <%= home.name %>
          </h1>

          <p class="text-gray-600 mb-3 text-lg">
            <i class="fas fa-map-marker-alt text-red-500"></i>
            <span class="ml-2 font-medium"><%= home.location %></span>
          </p>

          <!-- Description with icon -->
          <p class="text-gray-700 text-base mb-3 leading-relaxed">
            <i class="fas fa-align-left text-blue-500 mr-2"></i>
            <span><%= home.description %></span>
          </p>

          <div class="flex items-center mb-3">
            <span class="text-yellow-400 text-xl mr-2">â˜…</span>
            <span class="text-gray-800 font-semibold">
              <%= home.rating %>/5 Rating
            </span>
          </div>

          <p class="text-xl font-semibold text-green-600 mb-3">
            Rs. <%= home.price %>
            <span class="text-sm text-gray-500">/ night</span>
          </p>
          <%- include('../partials/favorite', home) %> <% if (home.rules) { %>
          <div class="mt-3">
            <a
              href="/<%= home.rules.replace(/\\/g, '/') %>"
              target="_blank"
              class="inline-flex items-center gap-2 px-3 py-1.5 bg-blue-500 text-white text-xs font-medium rounded-md shadow hover:bg-blue-600"
              download
            >
              <i class="fas fa-download text-sm"></i>
              Download Rule Book (PDF)
            </a>
          </div>
          <% } %>

          <a
            href="/home"
            class="inline-flex items-center mt-3 gap-2 px-3 py-1.5 bg-red-500 text-white text-xs font-medium rounded-md shadow hover:bg-red-600"
          >
            <i class="fas fa-arrow-left text-sm"></i>
            Back to Listings
          </a>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
