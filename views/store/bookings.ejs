<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { pageTitle }) %>

  <body
    class="bg-gray-100 text-gray-800 font-sans flex flex-col min-h-screen pattern-dots"
  >
    <%- include('../partials/nav') %>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex-grow">
      <section class="mt-16">
        <% if (homes.length === 0) { %>
        <p class="text-center text-gray-500 text-lg">No bookings found.</p>
        <% } else { %>
        <h1 class="text-3xl font-bold text-center text-green-700 mb-10">
          âœ… Your Booked Homes
        </h1>

        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 justify-items-center"
        >
          <% homes.forEach(home => { %>
          <div
            class="bg-white p-6 rounded-lg shadow-md text-center w-full max-w-sm"
          >
            <div class="mb-4">
              <img
                src="<%= home.photo %>"
                alt="<%= home.name %> photo"
                class="w-[300px] h-[200px] rounded-lg object-cover"
              />
            </div>
            <h2 class="text-xl font-semibold text-green-800 mb-2">
              <%= home.name %>
            </h2>
            <p class="text-gray-700">This home is successfully booked!</p>
          </div>
          <% }) %>
        </div>
        <% } %>
      </section>

      <div class="flex flex-col justify-center items-center gap-4 mt-12">
        <a
          href="/home"
          class="bg-green-700 text-white px-5 py-3 rounded-md hover:bg-green-800 transition"
        >
          Explore More Homes
        </a>

        <a
          href="/clearBookings"
          class="text-green-700 hover:underline transition"
        >
          Clear Your Bookings
        </a>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
